#include<stdio.h>
int main()
{
   int n, i, a[10];
  printf("\n Please Enter the Size of an Array :  ");
 scanf("%d", &n);
 
 for(i = 0; i < n; i++)
 {
 	printf("\n Please Enter the Array Elements  :  ");
      scanf("%d", &a[i]);
 }
 
 printf("\n List of Negative Numbers in this Array  :  "); 
 for(i = 0; i < n; i ++)
 {
   if(a[i] < 0)
   {
	   	printf("%d  ", a[i]);
   }
 }
 return 0;
}
