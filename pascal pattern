#include<stdio.h>
int main()
{
    int i,j,k,rows,n=1;
    printf("enter the number of rows:");
    scanf("%d",&rows);
    for(i=0;i<rows;i++)
    {
        for(k=1;k<=rows-i;k++)
        {
            printf(" ");
        }
        for(j=0;j<=i;j++)
       
        {
             if(j==0||i==0)
            n=1;
        else
            n=n*(i-j+1)/j;
            printf("%4d",n);
           
        }
        printf("\n");
    }
}
